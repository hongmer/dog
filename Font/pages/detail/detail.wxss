/* pages/detail.wxss */

.detail-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

.detail-author-date {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  padding: 15px;
  border-width: 2px;
  border-style: solid;
  border-color: red;
}

.detail-author {
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
}

.user-name {
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}

.detail-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

.detail-image {
  margin-left: 16rpx;
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}

.detail-content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.detail-button {
  width: 100%;
  border: 1rpx green;
  position: fixed;
  bottom: 5rpx;
}

.buttonLeft {
  float: left;
  width: 50%;
}

.buttonRight {
  float: right;
  width: 50%;
}

.button-container {
  display: flex;
  flex-direction: row;
}

.detail-textAndImage {
  background-color: white;
}
