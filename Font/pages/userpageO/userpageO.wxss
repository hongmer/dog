/* pages/userpageO/userpageO.wxss */

.userinfo-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 40rpx;
  background-color: #b3d4db;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

.op-left {
  margin-left: 20rpx;
  width: 200rpx;
}

.op-image {
  width: 150rpx;
  height: 150rpx;
}

.op-lefttO {
  width: 300rpx;
}

.op-right {
  color: #666;
  font-size: 25rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 10rpx;
}

.moto-container {
  margin-top: 30rpx;
  border: 1px solid #405f80;
  width: 200rpx;
  height: 80rpx;
  border-radius: 5rpx;
  text-align: center;
}

.moto {
  font-size: 30rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #405f80;
}

.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

.post-author-date {
  /* margin-top: 10rpx;
    margin-bottom: 20rpx;
    margin-left: 10rpx; */
  margin: 10rpx 0 20rpx 10rpx;
}

.post-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-date {
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

.post-image {
  margin-left: 16rpx;
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}

.post-content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
